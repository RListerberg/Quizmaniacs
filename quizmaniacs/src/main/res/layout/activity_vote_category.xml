<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="se.quizmaniacs.Activities.VoteCategoryMenu"
    android:id="@+id/activity_vote_category">

    <GridView
        android:id="@+id/VoteCategoryGridView"
        android:layout_width="675dp"
        android:layout_height="200dp"
        android:padding="5dp"
        android:numColumns="3"
        android:background="#e8ea63"
        android:verticalSpacing="5dp"
        android:horizontalSpacing="5dp"
        android:gravity="left"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VOTE"
        android:layout_centerInParent="true"
        android:layout_below="@id/VoteCategoryGridView"
        android:id="@+id/voteBtn" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/sym_def_app_icon"
        android:layout_marginTop="119dp"
        android:id="@+id/P1ImageView"
        android:layout_below="@+id/voteBtn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="37dp"
        android:layout_marginStart="37dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/sym_def_app_icon"
        android:id="@+id/P3ImageView"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/P1ImageView"
        android:layout_alignStart="@+id/P1ImageView"
        android:layout_marginBottom="22dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/sym_def_app_icon"
        android:id="@+id/P4ImageView"
        android:layout_alignTop="@+id/P3ImageView"
        android:layout_alignLeft="@+id/P2ImageView"
        android:layout_alignStart="@+id/P2ImageView" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/sym_def_app_icon"
        android:id="@+id/P2ImageView"
        android:layout_alignTop="@+id/P1ImageView"
        android:layout_alignLeft="@+id/voteBtn"
        android:layout_alignStart="@+id/voteBtn"
        android:layout_marginLeft="77dp"
        android:layout_marginStart="77dp" />

    <TextView
        android:text="Player 1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/P1ImageView"
        android:layout_toRightOf="@+id/P1ImageView"
        android:id="@+id/P1TextView"
        android:layout_alignTop="@+id/P1ImageView" />

    <TextView
        android:text="Player 2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/P2TextView"
        android:layout_alignTop="@+id/P2ImageView"
        android:layout_toRightOf="@+id/P2ImageView"
        android:layout_toEndOf="@+id/P2ImageView"
        android:layout_alignBottom="@+id/P2ImageView" />

    <TextView
        android:text="Player 3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/P3TextView"
        android:layout_alignTop="@+id/P3ImageView"
        android:layout_toRightOf="@+id/P3ImageView"
        android:layout_toEndOf="@+id/P3ImageView"
        android:layout_alignBottom="@+id/P3ImageView" />

    <TextView
        android:text="Player 4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/P4TextView"
        android:layout_alignTop="@+id/P4ImageView"
        android:layout_toRightOf="@+id/P4ImageView"
        android:layout_toEndOf="@+id/P4ImageView"
        android:layout_alignBottom="@+id/P4ImageView" />

</RelativeLayout>